pipeline {
    agent none
    stages { 
        stage('checkout and build') {
          agent { label 'mavennode' } 
          steps {
                sh 'rm -rf hello-world-war'
                sh 'git clone https://github.com/deepikar08/hello-world-war.git'
                dir('hello-world-war') {
                    sh 'mvn package'
                }
          }
        }
        stage('publish') {
          agent { label 'mavennode' }
            steps {
                dir('hello-world-war') {
                    sh "echo ${BUILD_NUMBER}"
                    sh 'cp -r target/hello-world-war-1.0.0.war hello-world-war-${BUILD_NUMBER}.war'
                    sh 'curl -X PUT -u admin:Devops@123 -T hello-world-war-${BUILD_NUMBER}.war \"http://13.232.113.99:8081/artifactory/maven/hello-world-war-${BUILD_NUMBER}.war\"'
                }    
            }    
        }
    }    
}
